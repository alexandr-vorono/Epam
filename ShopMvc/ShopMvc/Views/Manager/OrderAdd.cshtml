@model ShopMvc.Models.OrderModels
@{
    ViewBag.Title = "Оформление заказа";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
     @ViewBag.RegisterSucess

    
    
    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Manager)
                @Html.TextBoxFor(m => m.Manager)
            </li>
            <li>
                 @Html.LabelFor(m => m.Client)
                @Html.TextBoxFor(m => m.Client)
            </li>
            <li>
                 @Html.LabelFor(m => m.Item)
                @Html.TextBoxFor(m => m.Item)
            </li> 
             <li>
                @Html.LabelFor(m => m.Amount)
                @Html.TextBoxFor(m => m.Amount)
            </li>
            <li>
                @Html.LabelFor(m => m.Count)
                @Html.TextBoxFor(m => m.Count)
            </li>
        </ol>
        <input type="submit" value="Добавить" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}